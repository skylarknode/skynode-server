{
    "env": "development",
    "host": "localhost",
    "port": 8080,
    "timezone": "UTC",
    "root": "",

    "system": {
        "name": "example",
        "url":  {
            "host" : "localhost:8080",
            "ssl": false,
            "prefix": ""
        },
        "company": {
            "name": "hudaokeji",
            "address": "nanchang",
            "hp": "http://hudaokeji.com"
        },
        "private" : false
    },


    "assets": {
        "less": {
            "paths": []
        },

        "sass": {
            "paths": []
        }
    },

    "error": {
        "erroring": true
    },

    "middlewares" :{
        "http": {
            "bodyParser": {
                "json": true,
                "urlencoded": true
            },

            "compress": {
                "level": -1
            },

            "cookie": {
                "max-age": 86400
            },

            "csrf": {
                "ignore": []
            },

            "flash" : false,

            "header": {
                "X-Powered-By": "sky",
                "X-Frame-Options" : "SAMEORIGIN"
            },

            "rest": true,

            "restrict": {
                "max-request-size": "1MB",
                "ip-enabled-range": "*"
            },

            "session": {
                "secret": "sky",
                "saveUninitialized": true,
                "resave": false,
                "cookie": {
                    "httpOnly": true,
                    "maxAge": 7200000
                }
            },

            "spiderDetector" : true,

            "useragent" : true
        },
        "restapi" : {
            "cors" : true,
            "jsonp" : false,
            "ajax" : false
        },
        "custom": ""        
    },

    "logger": {
        "access": {
            "logfile": "access.log",
            "logdir": "logs",
            "rotating": "1d"
        },
        "dev": true
    },

    "mailer": {
        "adapter": "sendmail",
        "sendmail": {},
        "smtp": {
            "service": "Gmail",
            "auth": {
                "user": "",
                "pass": ""
            }
        }
    },

    "router": {
        "statics": [],
        "slaxes": [],
        "custom": ""
    },

    "store": {
        "adapter": "sqlite",
        "sqlite": {
            "location": "jsbin.sqlite",
            "initScript" : ""
        },
        "mysql": {
            "host": "localhost",
            "user": "root",
            "password": "",
            "database": "",
            "charset": "utf8mb4",
            "collate": "utf8mb4_unicode_ci"
        }
    },

    "views": {
        "-examples-" : {
            "handlebars": {
                "extname": "hbs",
                "viewsDir": "backend/views",
                "partialsDir": "backend/views/partials"
            },       
            "haml": {
                "extname": "haml",
                "viewsDir": "backend/views",
                "partialsDir": "backend/views/partials"
            }
        }

    },

    "activator" : null
}